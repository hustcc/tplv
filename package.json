{
  "name": "tplv",
  "version": "1.0.0",
  "description": "Nano(~170 bytes), high performance string template library, based on ES6 String template syntax.",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "unpkg": "dist/tplv.min.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "esm",
    "dist"
  ],
  "scripts": {
    "clean": "rimraf -rf lib esm dist",
    "lint-staged": "lint-staged",
    "test": "jest",
    "perf": "ts-node ./perf/index.ts",
    "build:umd": "rimraf ./dist && rollup -c",
    "build:cjs": "rimraf ./lib && tsc --module commonjs --outDir lib",
    "build:esm": "rimraf ./esm && tsc --module ESNext --outDir esm",
    "build": "npm run build:cjs && npm run build:esm && npm run build:umd",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {},
  "keywords": [
    "template",
    "tplv"
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@types/jest": "^24.0.18",
    "benchmark": "^2.1.4",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "jest-electron": "^0.1.7",
    "jest-raw-loader": "^1.0.1",
    "lint-staged": "^9.3.0",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "rollup": "^1.24.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-size": "^0.2.2",
    "rollup-plugin-typescript": "^1.0.1",
    "rollup-plugin-uglify": "^6.0.3",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.6.3"
  },
  "jest": {
    "runner": "jest-electron/runner",
    "testEnvironment": "jest-electron/environment",
    "preset": "ts-jest",
    "collectCoverage": true,
    "testRegex": "(/__tests__/.*\\.(test|spec))\\.ts$",
    "transform": {
      ".+\\.tpl": "jest-raw-loader"
    },
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
